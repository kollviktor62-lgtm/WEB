    <script>
        // State management
        let state = {
            bots: [],
            channels: [],
            logs: [],
            keywords: ['crypto', '–ø–æ–ª–∏—Ç–∏–∫–∞', '–Ω–æ–≤–æ—Å—Ç–∏', '—ç–∫–æ–Ω–æ–º–∏–∫–∞', '—Ç–µ—Ö–Ω–æ–ª–æ–≥–∏–∏'],
            emojis: ['üëç', 'üî•', 'üòÇ', 'ü§î', 'üíØ', '‚ù§Ô∏è', 'üòé', 'üöÄ'],
            templates: [],
            selectedBot: null,
            aiDirections: []
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
            startWebSocket();
        });

        function initializeApp() {
            // Load initial data
            loadBots();
            loadChannels();
            loadLogs();
            loadTemplates();
            renderKeywords();
            renderEmojis();
        }

        // WebSocket for real-time updates
        function startWebSocket() {
            // Simulate WebSocket connection for real-time logs
            setInterval(() => {
                addRandomLog();
            }, 5000);
        }

        // Navigation
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(section => {
                section.style.display = 'none';
            });
            
            // Show selected section
            document.getElementById(sectionId).style.display = 'block';
            
            // Update nav
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        // Bots Management
        function loadBots() {
            state.bots = [
                { id: 1, name: 'Parser-AI-1', phone: '+7 900 111-22-33', status: 'active', lastSeen: new Date() },
                { id: 2, name: 'Responder-3', phone: '+7 900 222-33-44', status: 'inactive', lastSeen: new Date() },
                { id: 3, name: 'Mirror-2', phone: '+7 900 333-44-55', status: 'active', lastSeen: new Date() }
            ];
            renderBots();
        }

        function renderBots() {
            const botList = document.getElementById('botList');
            if (botList) {
                botList.innerHTML = state.bots.map(bot => `
                    <div class="bot-card ${bot.id === state.selectedBot?.id ? 'active' : ''}" onclick="selectBot(${bot.id})">
                        <div class="bot-header">
                            <div class="bot-info">
                                <h3>${bot.name}</h3>
                                <p>${bot.phone} ‚Ä¢ ID: bot_${bot.id}</p>
                            </div>
                            <div class="bot-status ${bot.status === 'active' ? '' : 'inactive'}">
                                <span class="status-dot"></span>
                                ${bot.status === 'active' ? '–ê–∫—Ç–∏–≤–µ–Ω' : '–û—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω'}
                            </div>
                        </div>
                        <div class="bot-actions">
                            <button class="btn btn-secondary btn-sm" onclick="event.stopPropagation(); toggleBot(${bot.id})">
                                ${bot.status === 'active' ? '‚è∏Ô∏è –°—Ç–æ–ø' : '‚ñ∂Ô∏è –°—Ç–∞—Ä—Ç'}
                            </button>
                            <button class="btn btn-warning btn-sm" onclick="event.stopPropagation(); restartBot(${bot.id})">
                                üîÑ –†–µ—Å—Ç–∞—Ä—Ç
                            </button>
                            <button class="btn btn-danger btn-sm" onclick="event.stopPropagation(); deleteBot(${bot.id})">
                                üóëÔ∏è –£–¥–∞–ª–∏—Ç—å
                            </button>
                        </div>
                    </div>
                `).join('');
            }
        }

        function selectBot(botId) {
            state.selectedBot = state.bots.find(b => b.id === botId);
            renderBots();
            renderBotDetails();
        }

        function renderBotDetails() {
            const botDetails = document.getElementById('botDetails');
            if (!state.selectedBot || !botDetails) return;

            botDetails.innerHTML = `
                <h2>${state.selectedBot.name}</h2>
                <p style="color: var(--text-secondary); margin-bottom: 20px;">
                    ${state.selectedBot.phone} ‚Ä¢ ID: bot_${state.selectedBot.id}
                </p>
                
                <div class="settings-section">
                    <h4>‚öôÔ∏è –ó–∞–¥–∞—á–∏ (AI)</h4>
                    <div class="toggle-group">
                        <div class="toggle-item">
                            <span>–ó–µ—Ä–∫–∞–ª–∏—Ä–æ–≤–∞–Ω–∏–µ + –∫–∞—Ä—Ç–∏–Ω–∫–∞</span>
                            <div class="toggle-switch active" onclick="toggleBotTask(this, 'mirror')"></div>
                        </div>
                        <div class="toggle-item">
                            <span>–ü–µ—Ä–µ—Ä–∞–±–æ—Ç–∫–∞ –ø–æ—Å—Ç–∞ (–∞–Ω–∞–ª–∏–∑)</span>
                            <div class="toggle-switch active" onclick="toggleBotTask(this, 'rewrite')"></div>
                        </div>
                        <div class="toggle-item">
                            <span>–ê–≤—Ç–æ-–∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–∏</span>
                            <div class="toggle-switch" onclick="toggleBotTask(this, 'comment')"></div>
                        </div>
                        <div class="toggle-item">
                            <span>–†–∞—Å—Å—ã–ª–∫–∞ –≤ —á–∞—Ç—ã (–¥–∏–∞–ª–æ–≥)</span>
                            <div class="toggle-switch active" onclick="toggleBotTask(this, 'broadcast')"></div>
                        </div>
                        <div class="toggle-item">
                            <span>–†–µ–∞–∫—Ü–∏–∏</span>
                            <div class="toggle-switch active" onclick="toggleBotTask(this, 'react')"></div>
                        </div>
                    </div>
                </div>

                <div class="settings-section">
                    <h4>üìä –ü–∞—Ä–∞–º–µ—Ç—Ä—ã –ò–ò</h4>
                    <div class="input-group">
                        <label>–†–µ–∂–∏–º –æ—Ç–≤–µ—Ç–∞</label>
                        <select class="select">
                            <option>–ê–Ω–∞–ª–∏—Ç–∏—á–µ—Å–∫–∏–π</option>
                            <option>–î–µ—Ä–∑–∫–æ</option>
                            <option>–í–µ–∂–ª–∏–≤–æ</option>
                            <option>–ù–µ–π—Ç—Ä–∞–ª—å–Ω–æ</option>
                        </select>
                    </div>
                    <div class="input-group">
                        <label>–ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –ø–∞—Ä—Å–∏–Ω–≥–∞</label>
                        <input type="text" class="input" value="–∞–Ω–∞–ª–∏—Ç–∏–∫–∞ –∏ —Ñ–∞–∫—Ç—ã">
                    </div>
                    <div class="input-group">
                        <label>–ú–∞–∫—Å. —Å–æ–æ–±—â–µ–Ω–∏–π –≤ —á–∞—Å</label>
                        <input type="number" class="input" value="120">
                    </div>
                    <button class="btn btn-primary" onclick="saveBotSettings()">
                        üíæ –°–æ—Ö—Ä–∞–Ω–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
                    </button>
                </div>

                <div class="settings-section">
                    <h4>üéØ –†—É—á–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏</h4>
                    <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                        <button class="btn btn-secondary">üìù –û—Ç–ø—Ä–∞–≤–∏—Ç—å –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π</button>
                        <button class="btn btn-secondary">‚ù§Ô∏è –í—ã—Å—Ç–∞–≤–∏—Ç—å —Ä–µ–∞–∫—Ü–∏—é</button>
                        <button class="btn btn-secondary">üíæ –°–æ—Ö—Ä–∞–Ω–∏—Ç—å –∫–∞–Ω–∞–ª</button>
                    </div>
                </div>
            `;
        }

        function toggleBot(botId) {
            const bot = state.bots.find(b => b.id === botId);
            if (bot) {
                bot.status = bot.status === 'active' ? 'inactive' : 'active';
                renderBots();
                addLog(`Bot ${bot.name}`, bot.status === 'active' ? '–ó–∞–ø—É—â–µ–Ω' : '–û—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω');
            }
        }

        function restartBot(botId) {
            const bot = state.bots.find(b => b.id === botId);
            if (bot) {
                addLog(`Bot ${bot.name}`, '–ü–µ—Ä–µ–∑–∞–ø—É—â–µ–Ω');
                showNotification('–ë–æ—Ç –ø–µ—Ä–µ–∑–∞–ø—É—â–µ–Ω', 'success');
            }
        }

        function deleteBot(botId) {
            if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç–æ–≥–æ –±–æ—Ç–∞?')) {
                state.bots = state.bots.filter(b => b.id !== botId);
                if (state.selectedBot?.id === botId) {
                    state.selectedBot = null;
                }
                renderBots();
                addLog('System', `–ë–æ—Ç —É–¥–∞–ª–µ–Ω: bot_${botId}`);
                showNotification('–ë–æ—Ç —É–¥–∞–ª–µ–Ω', 'danger');
            }
        }

        function toggleBotTask(element, taskType) {
            element.classList.toggle('active');
            const isActive = element.classList.contains('active');
            addLog(`Bot ${state.selectedBot.name}`, `${taskType} ${isActive ? '–≤–∫–ª—é—á–µ–Ω' : '–≤—ã–∫–ª—é—á–µ–Ω'}`);
        }

        function saveBotSettings() {
            showNotification('–ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã', 'success');
            addLog(`Bot ${state.selectedBot.name}`, '–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ–±–Ω–æ–≤–ª–µ–Ω—ã');
        }

        // Channels Management
        function loadChannels() {
            state.channels = [
                { id: 1, username: '@crypto_signals', type: 'channel', members: 15234, active: true },
                { id: 2, username: '@tech_news', type: 'channel', members: 8921, active: true },
                { id: 3, username: 'Traders Chat', type: 'group', members: 523, active: true },
                { id: 4, username: '@finance_pro', type: 'channel', members: 45678, active: false }
            ];
            renderChannels();
        }

        function renderChannels() {
            const channelsList = document.getElementById('channelsList');
            if (channelsList) {
                channelsList.innerHTML = state.channels.map(channel => `
                    <div class="channel-card">
                        <div class="channel-info">
                            <div>
                                <div class="channel-name">${channel.username}</div>
                                <div class="channel-stats">
                                    <span class="channel-stat">–¢–∏–ø: ${channel.type === 'channel' ? '–ö–∞–Ω–∞–ª' : '–ì—Ä—É–ø–ø–∞'}</span>
                                    <span class="channel-stat">–£—á–∞—Å—Ç–Ω–∏–∫–æ–≤: ${channel.members.toLocaleString()}</span>
                                    <span class="channel-stat">–ê–∫—Ç–∏–≤–Ω–æ—Å—Ç—å: ${channel.active ? '–ê–∫—Ç–∏–≤–µ–Ω' : '–ù–µ–∞–∫—Ç–∏–≤–µ–Ω'}</span>
                                </div>
                            </div>
                            <div class="status-dot" style="background: ${channel.active ? 'var(--accent-success)' : 'var(--text-secondary)'}"></div>
                        </div>
                        <div class="channel-actions">
                            <button class="btn btn-primary btn-sm" onclick="parseChannel(${channel.id})">
                                üîç –ü–∞—Ä—Å–∏—Ç—å
                            </button>
                            <button class="btn btn-secondary btn-sm" onclick="viewChannelInfo(${channel.id})">
                                ‚ÑπÔ∏è –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è
                            </button>
                            <button class="btn btn-danger btn-sm" onclick="removeChannel(${channel.id})">
                                üóëÔ∏è –£–¥–∞–ª–∏—Ç—å
                            </button>
                        </div>
                    </div>
                `).join('');
            }
        }

        function addChannel() {
            const username = document.getElementById('channelUsername').value;
            const type = document.getElementById('channelType').value;
            
            if (username) {
                const newChannel = {
                    id: state.channels.length + 1,
                    username: username,
                    type: type,
                    members: Math.floor(Math.random() * 50000),
                    active: true
                };
                state.channels.push(newChannel);
                renderChannels();
                closeModal('addChannelModal');
                showNotification('–ö–∞–Ω–∞–ª –¥–æ–±–∞–≤–ª–µ–Ω', 'success');
                addLog('System', `–î–æ–±–∞–≤–ª–µ–Ω –∫–∞–Ω–∞–ª: ${username}`);
            }
        }

        function parseChannel(channelId) {
            const channel = state.channels.find(c => c.id === channelId);
            if (channel) {
                showNotification(`–ù–∞—á–∞—Ç –ø–∞—Ä—Å–∏–Ω–≥ ${channel.username}`, 'info');
                addLog('Parser', `–ü–∞—Ä—Å–∏–Ω–≥ –∫–∞–Ω–∞–ª–∞ ${channel.username}`);
            }
        }

        function viewChannelInfo(channelId) {
            const channel = state.channels.find(c => c.id === channelId);
            if (channel) {
                alert(`–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –∫–∞–Ω–∞–ª–µ:\n\n–ù–∞–∑–≤–∞–Ω–∏–µ: ${channel.username}\n–¢–∏–ø: ${channel.type}\n–£—á–∞—Å—Ç–Ω–∏–∫–æ–≤: ${channel.members}\n–°—Ç–∞—Ç—É—Å: ${channel.active ? '–ê–∫—Ç–∏–≤–µ–Ω' : '–ù–µ–∞–∫—Ç–∏–≤–µ–Ω'}`);
            }
        }

        function removeChannel(channelId) {
            if (confirm('–£–¥–∞–ª–∏—Ç—å —ç—Ç–æ—Ç –∫–∞–Ω–∞–ª?')) {
                state.channels = state.channels.filter(c => c.id !== channelId);
                renderChannels();
                showNotification('–ö–∞–Ω–∞–ª —É–¥–∞–ª–µ–Ω', 'danger');
            }
        }

        // Logs Management
        function loadLogs() {
            state.logs = [
                { time: new Date(), bot: 'Parser-AI-1', message: '–°–∫–∞—á–∞–Ω –ø–æ—Å—Ç –∏–∑ @news_channel: "–¶–µ–Ω–∞ –±–∏—Ç–∫–æ–∏–Ω–∞..."' },
                { time: new Date(), bot: 'Parser-AI-1', message: '–°–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω–∞ –∫–∞—Ä—Ç–∏–Ω–∫–∞ –¥–ª—è –ø–æ—Å—Ç–∞ (image_9821.png)' },
                { time: new Date(), bot: 'Mirror-2', message: '–û—Ç–ø—Ä–∞–≤–ª–µ–Ω —Ä–µ–ø–æ—Å—Ç –≤ @blackpelikan' },
                { time: new Date(), bot: 'Responder-3', message: '–û—Ç–ø—Ä–∞–≤–ª–µ–Ω –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π –≤ @chat_trader' }
            ];
            renderLogs();
        }

        function renderLogs() {
            const logsList = document.getElementById('logsList');
            if (logsList) {
                logsList.innerHTML = state.logs.slice(-20).reverse().map(log => `
                    <div class="log-item">
                        <div class="log-time">${formatTime(log.time)}</div>
                        <div class="log-content">
                            <span class="log-bot">${log.bot}:</span> ${log.message}
                        </div>
                    </div>
                `).join('');
            }
        }

        function addLog(bot, message) {
            state.logs.push({ time: new Date(), bot, message });
            renderLogs();
        }

        function addRandomLog() {
            const bots = ['Parser-AI-1', 'Mirror-2', 'Responder-3'];
            const actions = [
                '–°–∫–∞—á–∞–Ω –ø–æ—Å—Ç –∏–∑ –∫–∞–Ω–∞–ª–∞',
                '–û—Ç–ø—Ä–∞–≤–ª–µ–Ω –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π',
                '–í—ã—Å—Ç–∞–≤–ª–µ–Ω–∞ —Ä–µ–∞–∫—Ü–∏—è',
                '–ü–µ—Ä–µ—Ä–∞–±–æ—Ç–∞–Ω –ø–æ—Å—Ç —á–µ—Ä–µ–∑ AI',
                '–û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –≤ @blackpelikan'
            ];
            const bot = bots[Math.floor(Math.random() * bots.length)];
            const action = actions[Math.floor(Math.random() * actions.length)];
            addLog(bot, action);
        }

        // Templates Management
        function loadTemplates() {
            state.templates = [
                { id: 1, name: '–ê–Ω–∞–ª–∏—Ç–∏—á–µ—Å–∫–∏–π —Ä–∞–∑–±–æ—Ä', type: 'mirror', prompt: '–ü—Ä–æ–∞–Ω–∞–ª–∏–∑–∏—Ä—É–π –ø–æ—Å—Ç...' },
                { id: 2, name: '–î–µ—Ä–∑–∫–∏–π –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π', type: 'comment', prompt: '–ù–∞–ø–∏—à–∏ –¥–µ—Ä–∑–∫–∏–π –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π...' },
                { id: 3, name: '–ü—Ä–∏–≥–ª–∞—à–µ–Ω–∏–µ –≤ –∫–∞–Ω–∞–ª', type: 'broadcast', prompt: '–ü—Ä–∏–≥–ª–∞—Å–∏ –≤ @blackpelikan...' }
            ];
            renderTemplates();
        }

        function renderTemplates() {
            const templatesList = document.getElementById('templatesList');
            if (templatesList) {
                templatesList.innerHTML = state.templates.map(template => `
                    <div class="toggle-item">
                        <div class="toggle-label">
                            <span>${template.name}</span>
                            <small>–¢–∏–ø: ${template.type}</small>
                        </div>
                        <div style="display: flex; gap: 8px;">
                            <button class="btn btn-secondary btn-sm" onclick="editTemplate(${template.id})">‚úèÔ∏è</button>
                            <button class="btn btn-danger btn-sm" onclick="deleteTemplate(${template.id})">üóëÔ∏è</button>
                        </div>
                    </div>
                `).join('');
            }
        }

        function saveTemplate() {
            const name = document.getElementById('templateName').value;
            const type = document.getElementById('templateType').value;
            const prompt = document.getElementById('templatePrompt').value;
            
            if (name && prompt) {
                state.templates.push({
                    id: state.templates.length + 1,
                    name,
                    type,
                    prompt
                });
                renderTemplates();
                closeModal('templateModal');
                showNotification('–®–∞–±–ª–æ–Ω —Å–æ—Ö—Ä–∞–Ω–µ–Ω', 'success');
            }
        }

        function editTemplate(templateId) {
            const template = state.templates.find(t => t.id === templateId);
            if (template) {
                document.getElementById('templateName').value = template.name;
                document.getElementById('templateType').value = template.type;
                document.getElementById('templatePrompt').value = template.prompt;
                openModal('templateModal');
            }
        }

        function deleteTemplate(templateId) {
            if (confirm('–£–¥–∞–ª–∏—Ç—å —ç—Ç–æ—Ç —à–∞–±–ª–æ–Ω?')) {
                state.templates = state.templates.filter(t => t.id !== templateId);
                renderTemplates();
                showNotification('–®–∞–±–ª–æ–Ω —É–¥–∞–ª–µ–Ω', 'danger');
            }
        }

        // Task Settings
        function openTaskSettings(taskType) {
            const modal = document.getElementById('taskSettingsModal');
            const title = document.getElementById('taskSettingsTitle');
            const content = document.getElementById('taskSettingsContent');
            
            const titles = {
                mirror: '–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –∑–µ—Ä–∫–∞–ª–∏—Ä–æ–≤–∞–Ω–∏—è',
                rewrite: '–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –ø–µ—Ä–µ—Ä–∞–±–æ—Ç–∫–∏',
                comment: '–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤',
                broadcast: '–ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Ä–∞—Å—Å—ã–ª–∫–∏',
                react: '–ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Ä–µ–∞–∫—Ü–∏–π'
            };
            
            title.textContent = titles[taskType];
            
            content.innerHTML = `
                <div class="input-group">
                    <label>–®–∞–±–ª–æ–Ω</label>
                    <select class="select">
                        ${state.templates.filter(t => t.type === taskType).map(t => 
                            `<option value="${t.id}">${t.name}</option>`
                        ).join('')}
                    </select>
                </div>
                <div class="input-group">
                    <label>–ß–∞—Å—Ç–æ—Ç–∞ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è</label>
                    <select class="select">
                        <option>–ö–∞–∂–¥—ã–µ 5 –º–∏–Ω—É—Ç</option>
                        <option>–ö–∞–∂–¥—ã–µ 15 –º–∏–Ω—É—Ç</option>
                        <option>–ö–∞–∂–¥—ã–π —á–∞—Å</option>
                        <option>–í—Ä—É—á–Ω—É—é</option>
                    </select>
                </div>
                <div class="input-group">
                    <label>–ö–∞–Ω–∞–ª—ã –¥–ª—è ${taskType === 'mirror' ? '–ø–∞—Ä—Å–∏–Ω–≥–∞' : '—Ä–∞–±–æ—Ç—ã'}</label>
                    <select class="select" multiple style="height: 100px;">
                        ${state.channels.map(c => 
                            `<option value="${c.id}">${c.username}</option>`
                        ).join('')}
                    </select>
                </div>
                <button class="btn btn-primary" onclick="saveTaskSettings('${taskType}')">
                    üíæ –°–æ—Ö—Ä–∞–Ω–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
                </button>
                <button class="btn btn-danger" onclick="deleteTaskSettings('${taskType}')">
                    üóëÔ∏è –£–¥–∞–ª–∏—Ç—å –∑–∞–¥–∞—á—É
                </button>
            `;
            
            openModal('taskSettingsModal');
        }

        function saveTaskSettings(taskType) {
            closeModal('taskSettingsModal');
            showNotification(`–ù–∞—Å—Ç—Ä–æ–π–∫–∏ ${taskType} —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã`, 'success');
            addLog('System', `–û–±–Ω–æ–≤–ª–µ–Ω—ã –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –∑–∞–¥–∞—á–∏: ${taskType}`);
        }

        function deleteTaskSettings(taskType) {
            if (confirm('–£–¥–∞–ª–∏—Ç—å —ç—Ç—É –∑–∞–¥–∞—á—É?')) {
                closeModal('taskSettingsModal');
                showNotification(`–ó–∞–¥–∞—á–∞ ${taskType} —É–¥–∞–ª–µ–Ω–∞`, 'danger');
                addLog('System', `–£–¥–∞–ª–µ–Ω–∞ –∑–∞–¥–∞—á–∞: ${taskType}`);
            }
        }

        // Keywords & Emojis
        function renderKeywords() {
            const keywordsList = document.getElementById('keywordsList');
            if (keywordsList) {
                keywordsList.innerHTML = state.keywords.map((keyword, index) => `
                    <div class="keyword-tag">
                        ${keyword}
                        <span class="remove" onclick="removeKeyword(${index})">√ó</span>
                    </div>
                `).join('');
            }
        }

        function addKeyword() {
            const keyword = prompt('–í–≤–µ–¥–∏—Ç–µ –∫–ª—é—á–µ–≤–æ–µ —Å–ª–æ–≤–æ:');
            if (keyword) {
                state.keywords.push(keyword);
                renderKeywords();
                showNotification('–ö–ª—é—á–µ–≤–æ–µ —Å–ª–æ–≤–æ –¥–æ–±–∞–≤–ª–µ–Ω–æ', 'success');
            }
        }

        function removeKeyword(index) {
            state.keywords.splice(index, 1);
            renderKeywords();
        }

        function renderEmojis() {
            const emojiList = document.getElementById('emojiList');
            if (emojiList) {
                emojiList.innerHTML = state.emojis.map((emoji, index) => `
                    <div class="keyword-tag">
                        ${emoji}
                        <span class="remove" onclick="removeEmoji(${index})">√ó</span>
                    </div>
                `).join('');
            }
        }

        function addEmoji() {
            const emoji = prompt('–í–≤–µ–¥–∏—Ç–µ —ç–º–æ–¥–∑–∏:');
            if (emoji) {
                state.emojis.push(emoji);
                renderEmojis();
                showNotification('–≠–º–æ–¥–∑–∏ –¥–æ–±–∞–≤–ª–µ–Ω–æ', 'success');
            }
        }

        function removeEmoji(index) {
            state.emojis.splice(index, 1);
            renderEmojis();
        }

        // AI Direction
        function saveAIDirection() {
            const direction = document.getElementById('aiDirection').value;
            if (direction) {
                state.aiDirections.push({
                    id: Date.now(),
                    text: direction,
                    date: new Date()
                });
                renderAIDirections();
                document.getElementById('aiDirection').value = '';
                showNotification('–ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ AI —Å–æ—Ö—Ä–∞–Ω–µ–Ω–æ', 'success');
            }
        }

        function renderAIDirections() {
            const savedDirections = document.getElementById('savedDirections');
            if (savedDirections) {
                savedDirections.innerHTML = state.aiDirections.map(dir => `
                    <div class="toggle-item">
                        <div class="toggle-label">
                            <span>${dir.text.substring(0, 50)}...</span>
                            <small>–°–æ—Ö—Ä–∞–Ω–µ–Ω–æ: ${formatTime(dir.date)}</small>
                        </div>
                        <button class="btn btn-danger btn-sm" onclick="removeAIDirection(${dir.id})">
                            üóëÔ∏è –£–¥–∞–ª–∏—Ç—å
                        </button>
                    </div>
                `).join('');
            }
        }

        function removeAIDirection(dirId) {
            state.aiDirections = state.aiDirections.filter(d => d.id !== dirId);
            renderAIDirections();
            showNotification('–ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ —É–¥–∞–ª–µ–Ω–æ', 'danger');
        }

        // Analytics
        function showAnalyticsTab(tabName) {
            document.querySelectorAll('#analytics .tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');
            
            const content = document.getElementById('analyticsContent');
            
            if (tabName === 'overview') {
                content.innerHTML = `
                    <div class="stats-grid" style="grid-template-columns: repeat(4, 1fr);">
                        <div class="stat-card">
                            <div class="stat-value">1234</div>
                            <div class="stat-label">–ü—Ä–æ–∞–Ω–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω–æ</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">312</div>
                            <div class="stat-label">–û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">6.4%</div>
                            <div class="stat-label">CTR</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">23</div>
                            <div class="stat-label">–ê–∫—Ç–∏–≤–Ω—ã—Ö —á–∞—Ç–æ–≤</div>
                        </div>
                    </div>
                `;
            } else if (tabName === 'bots') {
                content.innerHTML = `
                    <h4 style="margin-bottom: 15px;">–ü—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å –ø–æ –±–æ—Ç–∞–º</h4>
                    ${state.bots.map(bot => `
                        <div class="toggle-item" onclick="showBotAnalytics(${bot.id})">
                            <div class="toggle-label">
                                <span>${bot.name}</span>
                                <small>–°–æ–æ–±—â–µ–Ω–∏–π: ${Math.floor(Math.random() * 500)} | CTR: ${(Math.random() * 10).toFixed(1)}%</small>
                            </div>
                            <button class="btn btn-secondary btn-sm">
                                üìä –ü–æ–¥—Ä–æ–±–Ω–µ–µ
                            </button>
                        </div>
                    `).join('')}
                `;
            } else if (tabName === 'ai') {
                content.innerHTML = `
                    <h4 style="margin-bottom: 15px;">AI –ø—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å</h4>
                    <div class="log-item">
                        <div class="log-time">–°–µ–≥–æ–¥–Ω—è</div>
                        <div class="log-content">
                            <strong>–í—Å–µ–≥–æ –∑–∞–ø—Ä–æ—Å–æ–≤:</strong> 1547<br>
                            <strong>–£—Å–ø–µ—à–Ω—ã—Ö –≥–µ–Ω–µ—Ä–∞—Ü–∏–π:</strong> 1523 (98.4%)<br>
                            <strong>–°—Ä–µ–¥–Ω—è—è –¥–ª–∏–Ω–∞ –æ—Ç–≤–µ—Ç–∞:</strong> 127 —Ç–æ–∫–µ–Ω–æ–≤<br>
                            <strong>–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–æ —Ç–æ–∫–µ–Ω–æ–≤:</strong> 195,831
                        </div>
                    </div>
                    <button class="btn btn-secondary" style="margin-top: 15px;">
                        üì• –°–∫–∞—á–∞—Ç—å –æ—Ç—á–µ—Ç AI
                    </button>
                `;
            }
        }

        function showBotAnalytics(botId) {
            const bot = state.bots.find(b => b.id === botId);
            if (bot) {
                alert(`–î–µ—Ç–∞–ª—å–Ω–∞—è –∞–Ω–∞–ª–∏—Ç–∏–∫–∞ –±–æ—Ç–∞ ${bot.name}:\n\n–°–æ–æ–±—â–µ–Ω–∏–π –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ: 487\n–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤: 123\n–†–µ–∞–∫—Ü–∏–π: 654\n–ü–µ—Ä–µ—Ö–æ–¥–æ–≤ –≤ –∫–∞–Ω–∞–ª: 31\n\nCTR: 6.4%\n–°—Ä–µ–¥–Ω—è—è –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å: 78.3%`);
            }
        }

        // Bot Creation Flow
        function sendCode() {
            const phone = document.getElementById('botPhone').value;
            if (phone) {
                document.getElementById('codeInput').style.display = 'block';
                showNotification('–ö–æ–¥ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω –Ω–∞ ' + phone, 'info');
                addLog('System', `–û—Ç–ø—Ä–∞–≤–ª–µ–Ω –∫–æ–¥ –Ω–∞ ${phone}`);
            }
        }

        function verifyCode() {
            const code = document.getElementById('smsCode').value;
            const name = document.getElementById('botName').value;
            const phone = document.getElementById('botPhone').value;
            
            if (code && name && phone) {
                const newBot = {
                    id: state.bots.length + 1,
                    name: name,
                    phone: phone,
                    status: 'active',
                    lastSeen: new Date()
                };
                state.bots.push(newBot);
                renderBots();
                closeModal('createBotModal');
                showNotification('–ë–æ—Ç —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω', 'success');
                addLog('System', `–°–æ–∑–¥–∞–Ω –Ω–æ–≤—ã–π –±–æ—Ç: ${name}`);
            }
        }

        // System functions
        function viewSystemLogs() {
            const logs = state.logs.map(log => 
                `${formatTime(log.time)} - ${log.bot}: ${log.message}`
            ).join('\n');
            alert('–°–∏—Å—Ç–µ–º–Ω—ã–µ –ª–æ–≥–∏:\n\n' + logs);
        }

        function clearLogs() {
            if (confirm('–û—á–∏—Å—Ç–∏—Ç—å –≤—Å–µ –ª–æ–≥–∏?')) {
                state.logs = [];
                renderLogs();
                showNotification('–õ–æ–≥–∏ –æ—á–∏—â–µ–Ω—ã', 'warning');
            }
        }

        // UI Helpers
        function toggleSwitch(element) {
            element.classList.toggle('active');
        }

        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        function openCreateBotModal() {
            document.getElementById('botName').value = '';
            document.getElementById('botPhone').value = '';
            document.getElementById('smsCode').value = '';
            document.getElementById('codeInput').style.display = 'none';
            openModal('createBotModal');
        }

        function openAddChannelModal() {
            document.getElementById('channelUsername').value = '';
            openModal('addChannelModal');
        }

        function openTemplateModal() {
            document.getElementById('templateName').value = '';
            document.getElementById('templatePrompt').value = '';
            openModal('templateModal');
        }

        function openTaskModal() {
            alert('–°–æ–∑–¥–∞–Ω–∏–µ –Ω–æ–≤–æ–π –∑–∞–¥–∞—á–∏ - –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ');
        }

        function showBotTab(tabType) {
            // Implementation for bot tabs
        }

        function showNotification(message, type = 'info') {
            // Simple notification (can be enhanced with toast library)
            console.log(`[${type.toUpperCase()}] ${message}`);
        }

        function formatTime(date) {
            const d = new Date(date);
            return d.toLocaleString('ru-RU', {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
        }
    </script>
</body>
</html>
